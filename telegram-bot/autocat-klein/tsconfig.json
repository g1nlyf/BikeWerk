{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "..", 
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*", "../config/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
