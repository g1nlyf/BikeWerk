import React, { useState, useEffect } from 'react';
import { apiGet } from '../api';
import { 
  BarChart, Bar, XAxis, YAxis, Tooltip, ResponsiveContainer, 
  PieChart, Pie, Cell, LineChart, Line, CartesianGrid 
} from 'recharts';
import { 
  Target, Filter, Brain, CheckCircle, XCircle, 
  RefreshCw, TrendingUp, AlertTriangle, Activity 
} from 'lucide-react';

const HunterDashboard = () => {
  const [stats, setStats] = useState(null);
  const [loading, setLoading] = useState(true);
  const [timeRange, setTimeRange] = useState('24h');

  useEffect(() => {
    fetchStats();
    const interval = setInterval(fetchStats, 30000); // Poll every 30s
    return () => clearInterval(interval);
  }, [timeRange]);

  const fetchStats = async () => {
    try {
      const res = await apiGet(`/admin/hunter/stats?range=${timeRange}`);
      if (res.success) {
        setStats(res.data);
      }
    } catch (e) {
      console.error("Failed to fetch hunter stats", e);
    } finally {
      setLoading(false);
    }
  };

  if (loading) return (
    <div className="flex items-center justify-center h-screen bg-[#0f172a]">
      <div className="text-blue-500 animate-pulse">Загрузка данных Hunter...</div>
    </div>
  );

  const funnelData = [
    { name: 'Найдено', value: stats?.funnel?.found || 0, fill: '#60A5FA' },
    { name: 'Прошли фильтр', value: stats?.funnel?.passedFilter || 0, fill: '#34D399' },
    { name: 'AI Анализ', value: stats?.funnel?.aiAnalyzed || 0, fill: '#818CF8' },
    { name: 'Опубликовано', value: stats?.funnel?.published || 0, fill: '#F472B6' },
  ];

  const rejectionData = stats?.rejections || [
    { name: 'Frame Only', value: 45 },
    { name: 'Price Too High', value: 30 },
    { name: 'No Image', value: 15 },
    { name: 'Parts/Components', value: 10 },
  ];

  const COLORS = ['#EF4444', '#F59E0B', '#6B7280', '#8B5CF6'];

  return (
    <div className="min-h-screen bg-[#0f172a] text-white p-4 pb-24 animate-appear-zoom">
      {/* Header */}
      <div className="flex justify-between items-center mb-6">
        <div>
          <h1 className="text-2xl font-bold flex items-center gap-2">
            <Target className="text-blue-500" />
            Hunter Dashboard
          </h1>
          <p className="text-xs text-gray-400">Мониторинг воронки отбора в реальном времени</p>
        </div>
        <div className="flex gap-2 bg-white/5 p-1 rounded-lg">
          {['24h', '7d', '30d'].map((range) => (
            <button
              key={range}
              onClick={() => setTimeRange(range)}
              className={`px-3 py-1 text-xs rounded-md transition-colors ${
                timeRange === range 
                  ? 'bg-blue-600 text-white' 
                  : 'text-gray-400 hover:text-white'
              }`}
            >
              {range}
            </button>
          ))}
        </div>
      </div>

      {/* KPI Cards */}
      <div className="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
        <KPICard 
          title="Всего найдено" 
          value={stats?.funnel?.found || 0} 
          icon={<SearchIcon />} 
          color="bg-blue-500/10 text-blue-400" 
        />
        <KPICard 
          title="Прошли фильтр" 
          value={stats?.funnel?.passedFilter || 0} 
          subValue={`${((stats?.funnel?.passedFilter / (stats?.funnel?.found || 1)) * 100).toFixed(1)}%`}
          icon={<Filter size={18} />} 
          color="bg-green-500/10 text-green-400" 
        />
        <KPICard 
          title="AI Обработано" 
          value={stats?.funnel?.aiAnalyzed || 0} 
          icon={<Brain size={18} />} 
          color="bg-purple-500/10 text-purple-400" 
        />
        <KPICard 
          title="Опубликовано" 
          value={stats?.funnel?.published || 0} 
          subValue={`${((stats?.funnel?.published / (stats?.funnel?.aiAnalyzed || 1)) * 100).toFixed(1)}%`}
          icon={<CheckCircle size={18} />} 
          color="bg-pink-500/10 text-pink-400" 
        />
      </div>

      {/* Charts Section */}
      <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        {/* Funnel Visualization */}
        <div className="bg-white/5 border border-white/10 rounded-2xl p-4">
          <h3 className="text-sm font-bold text-gray-300 mb-4 flex items-center gap-2">
            <Activity size={16} /> Воронка конверсии
          </h3>
          <div className="h-64 w-full">
            <ResponsiveContainer width="100%" height="100%">
              <BarChart data={funnelData} layout="vertical" margin={{ left: 40, right: 20 }}>
                <XAxis type="number" hide />
                <YAxis dataKey="name" type="category" width={100} tick={{ fill: '#9CA3AF', fontSize: 12 }} />
                <Tooltip 
                  contentStyle={{ backgroundColor: '#1E293B', borderColor: '#374151', color: '#fff' }}
                  itemStyle={{ color: '#fff' }}
                />
                <Bar dataKey="value" radius={[0, 4, 4, 0]}>
                  {funnelData.map((entry, index) => (
                    <Cell key={`cell-${index}`} fill={entry.fill} />
                  ))}
                </Bar>
              </BarChart>
            </ResponsiveContainer>
          </div>
        </div>

        {/* Rejection Reasons */}
        <div className="bg-white/5 border border-white/10 rounded-2xl p-4">
          <h3 className="text-sm font-bold text-gray-300 mb-4 flex items-center gap-2">
            <XCircle size={16} /> Причины отсева
          </h3>
          <div className="h-64 w-full flex items-center justify-center">
            <ResponsiveContainer width="100%" height="100%">
              <PieChart>
                <Pie
                  data={rejectionData}
                  cx="50%"
                  cy="50%"
                  innerRadius={60}
                  outerRadius={80}
                  paddingAngle={5}
                  dataKey="value"
                >
                  {rejectionData.map((entry, index) => (
                    <Cell key={`cell-${index}`} fill={COLORS[index % COLORS.length]} />
                  ))}
                </Pie>
                <Tooltip 
                  contentStyle={{ backgroundColor: '#1E293B', borderColor: '#374151', color: '#fff' }}
                />
              </PieChart>
            </ResponsiveContainer>
          </div>
          <div className="flex flex-wrap gap-2 justify-center mt-2">
            {rejectionData.map((entry, index) => (
              <div key={index} className="flex items-center gap-1 text-[10px] text-gray-400">
                <div className="w-2 h-2 rounded-full" style={{ backgroundColor: COLORS[index % COLORS.length] }}></div>
                {entry.name} ({entry.value}%)
              </div>
            ))}
          </div>
        </div>
      </div>

      {/* Live Logs */}
      <div className="bg-white/5 border border-white/10 rounded-2xl p-4">
        <div className="flex justify-between items-center mb-4">
          <h3 className="text-sm font-bold text-gray-300">Live Activity Logs</h3>
          <span className="text-[10px] text-green-400 flex items-center gap-1">
            <div className="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
            Online
          </span>
        </div>
        <div className="space-y-2 max-h-60 overflow-y-auto custom-scrollbar">
          {stats?.logs?.map((log, i) => (
            <div key={i} className="flex gap-3 items-start text-xs border-b border-white/5 pb-2 last:border-0">
              <span className="text-gray-500 font-mono whitespace-nowrap">
                {new Date(log.timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', second: '2-digit' })}
              </span>
              <div className="flex-1">
                <span className={`font-bold mr-2 ${getStatusColor(log.status)}`}>
                  [{log.action}]
                </span>
                <span className="text-gray-300">{log.details || log.message}</span>
              </div>
            </div>
          ))}
          {(!stats?.logs || stats.logs.length === 0) && (
            <div className="text-center text-gray-500 py-4">Нет свежих логов</div>
          )}
        </div>
      </div>
    </div>
  );
};

const KPICard = ({ title, value, subValue, icon, color }) => (
  <div className={`rounded-2xl p-4 border border-white/5 ${color.replace('text-', 'border-').replace('bg-', 'bg-opacity-10 ')} bg-opacity-5`}>
    <div className="flex justify-between items-start mb-2">
      <div className={`p-2 rounded-lg ${color}`}>{icon}</div>
      {subValue && <span className="text-xs font-bold text-gray-400">{subValue}</span>}
    </div>
    <div className="text-xs text-gray-400 mb-1">{title}</div>
    <div className="text-2xl font-bold text-white">{value}</div>
  </div>
);

const SearchIcon = () => (
  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round">
    <circle cx="11" cy="11" r="8"></circle>
    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
  </svg>
);

const getStatusColor = (status) => {
  switch (status) {
    case 'success': return 'text-green-400';
    case 'warning': return 'text-yellow-400';
    case 'error': return 'text-red-400';
    case 'info': return 'text-blue-400';
    default: return 'text-gray-400';
  }
};

export default HunterDashboard;
